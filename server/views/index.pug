    .cabeceraAreaTitle, .cabeceraLiterales, .cabeceraSecondModel{ width: 600px; border-bottom: 1px solid #000;  border-right: 1px solid #000; display: flex;justify-content: center; align-items: center; padding: 1px 0;}

    .cabeceraAreaTitle{ font-size: 15px; }

    .cabeceraLiterales { width: 36px; font-size: 13px; }
    .cabeceraSecondModel { width: 36px; font-size: 13px; overflow: hidden; }

    .no-borde-right { border-right: none; }
    .no-borde-bottom { border-bottom:none; }

    /* cuerpo del contenido  */
    .contenidoIndicadores { display: flex; }
    .rotateParrafo { width: 20px; border-right: 1px solid #000;  border-bottom: 1px solid #000;}
    .rotateParrafo > p{ font-size: 12px; transform: rotate(-90deg); margin-top: 600%; font-weight: bold; }
    .contentDescripcion { display: flex; border-bottom: 1px solid #000; }
    .descripcion, .descHojaCompleta {  width: 570px;  border-right: 1px solid #000; font-size: 11.4px; text-align: justify; padding: 1px 4px; }
