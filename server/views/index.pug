    .contentCabeceraDatos{ width: 710px !important; margin: auto; border: 1px solid #000; margin-left: 3rem !important;}
    /*Estilos cabecera Estudiante*/
    .cabeceraDatosEstudiante, .cabeceraDatosInfo, .cabeceraDatosTextArea { border-bottom: 1px solid #000;;}
    .borde { border-right: 1px solid #000 }
    .cabeceraEstudianteParrafo, .cabeceraInfoTitle, .cabeceraTextAreaDescrip { padding: 2px 7px; font-size: 11px; display: inline-block; text-align: justify;}
    .estudiante { font-size: 12px; }
    .cabeceraInfoTitle { font-size: 12px; }
    .cabeceraDatosTextArea { border-bottom: none; }
    .contentCabeceraLiterales { width: 530px;  margin: auto;
    font-weight: bold; display: flex; justify-content: space-evenly;
    }
    .CabeceraLiterales, .literalesTop  { font-size: 14px;}
    /* Indicadores docentes esitlos */
    .contentIndicadorDocentes { width: 710px; margin: auto; border: 1px solid #000; margin-top: 0.7rem; margin-bottom: 19rem; margin-left: 3rem;}  /*margin abajo de 17rem, para que tire el contenido sobrante para abajo, genere una nueva hoja y no vaya a mostrarse cortado.  height: 657px;*/
